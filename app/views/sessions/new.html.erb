<%= form_for :session, url: {action: 'create'} do |f| %>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>

   <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<% if @error %>
<p style="color:red;">Incorrect Login</p>
<% end %>