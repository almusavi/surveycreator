<div class="container whitebox">
<span class="border-0">
<%= form_for User.new, :html => {:class => "form-horizontal"}, url: {action: 'create'} do |f| %>
  <div class="form-group">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div class="center">
    <%= f.submit "New User", :class => "btn btn-primary"%>
  </div>
<% end %>
</span>
</div>